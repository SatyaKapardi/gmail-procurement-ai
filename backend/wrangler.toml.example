name = "gmail-procurement-ai"
main = "src/index.js"
compatibility_date = "2024-01-01"

[env.production]
vars = { ENVIRONMENT = "production" }

# D1 Database binding
[[d1_databases]]
binding = "DB"
database_name = "procurement-db"
database_id = "YOUR_D1_DATABASE_ID"

# KV Namespace binding
[[kv_namespaces]]
binding = "CACHE"
id = "YOUR_KV_NAMESPACE_ID"

# Secrets (set via wrangler secret put)
# GEMINI_API_KEY
# GROQ_API_KEY
# OPENROUTER_API_KEY
# TOGETHER_API_KEY
# HUGGINGFACE_API_KEY
# LLM_PROVIDER
# GOOGLE_CLIENT_ID
# GOOGLE_CLIENT_SECRET
